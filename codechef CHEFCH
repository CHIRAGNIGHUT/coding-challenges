import java.util.Scanner;

class neuro_wa3 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int limit = sc.nextInt();
		for(int i=0;i<limit;i++){
			long m = sc.nextLong();
			long n = sc.nextLong();
			long wrongcases = 0L;
			if((m>0)&&(n>2)){
				wrongcases += 4*(m-1)*(n-2);
			}
			if((m>2)&&(n>1)){
				wrongcases += 4*(m-2)*(n-1);
			}
			System.out.println((((m)*(n))*((m*n)-1))-wrongcases);
		}
	}

}
